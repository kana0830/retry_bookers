<div class="row">
  <div class="col-xs-3">

    <h2>User info</h2>
    <%= render "users/info", user: @user %>

    <h2>New book</h2>
    <%= render "books/form", user: @user, book: @book %>
    
  </div>

  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <th>image</th>
        <th>name</th>
        <th></th>
      </thead>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user %></td>
      </tr>
      <% end %>
    </table>    
  </div>
</div>


