<div class="row">
  <div class="col-xs-3">

    <h2>User info</h2>
    <%= render "users/info", user: @user %>

    <h2>New book</h2>
    <%= render "books/form", user: @user, book: @book %>
    
  </div>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>