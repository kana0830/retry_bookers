<div class="row">
  <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= render "users/info", user: @user %>

    <h2>New book</h2>
    <%= render "books/form", user: @user, book: @book %>
    
  </div>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.user do %>
              <%= attachment_image_tag book.user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
            <% end %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
