<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <table class="table">
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
    <%= link_to edit_user_path(@user) do %>
      <div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
    <% end %>
    <h2>New book</h2>
    <div class="form">
      <%= form_with model: @book_new do |f| %>

        <%# ここからエラーメッセージ %>
        <% if @book_new.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@book_new.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% @book_new.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%# ここまでエラーメッセージ %>

        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class: "col-xs-12" %>
          <%= f.submit "Create Book", method: :post, class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



