<div class="row col-md-9">
  <h2>Editing Book</h2>
  <div class="form">
    <%= form_with model: @book do |f| %>

      <%# ここからエラーメッセージ %>
        <%= render 'layouts/error', model: f.object %>
      <%# ここまでエラーメッセージ %>

      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title, class: "col-xs-12 book_title" %>
      </div>
      <div class="form-group">
        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "col-xs-12 book_title" %>
        <%= f.submit "Update Book", method: :post, class: "btn btn-primary col-xs-12 book_title" %>
      </div>
    <% end %>
  </div>
  <P>
    <%= link_to "Show", @book %> | 
    <%= link_to "Back", books_path %>
  </P>
</div>